<h1>Log in</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

  <%= f.label :email , class: 'next-row'%>
  <%= f.email_field :email %>
  
  <%= f.label :password , class: 'next-row'%>
  <%= f.password_field :password %>
  
  <%= f.submit "Log in", class: 'next-row btn btn-success' %>
<% end %>

<div class="new-user-link"><%= link_to "新規会員登録はこちら", new_user_path %></div>