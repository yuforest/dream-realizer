<h1>Sign up</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :name , class: 'next-row'%>
  <%= f.text_field :name %>
  
  <%= f.label :email, class: 'next-row' %>
  <%= f.email_field :email %>
  
  
  <%= f.label :password , class: 'next-row'%>
  <%= f.password_field :password %>
  
  <%= f.label :password_confirmation , class: 'next-row'%>
  <%= f.password_field :password_confirmation %>
  
  <%= f.submit "Create my account", class: 'next-row btn btn-success' %>
  
<% end %>