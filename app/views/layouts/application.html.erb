<!DOCTYPE html>
<html>
  <head>
    <title>DreamRealizer</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>
  

  <body>
 
  <header>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse1" aria-extended="false">
            <span class="sr-only">Dream Realizer</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Dream Realizer</a>
        </div>
        
        <div class="collapse navbar-collapse" id="navbar-collapse1">
          <ul class="nav navbar-nav">
            <li><a href="/">HOME</span></a></li>
            <li><a href="/long_targets">長期計画</a></li>
            <li><%= link_to "カレンダー", calendars_path %></li>
<!--<a href="/calendars">カレンダー</a>-->
          </ul>
          <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li><%= link_to "Profile", user_path(current_user.id) %></li>
            <li>
              <%= link_to session_path(current_user.id), method: :delete do %>
                <i class="fa fa-sign-out"></i> Logout
              <% end %>
            </li>
          <% else %>
            <li><%= link_to "Sign Up", new_user_path %></li>
            <li>
              <%= link_to new_session_path do %>
                <i class="fa fa-sign-in" aria-hidden="true"></i> Login
              <% end %>
            </li>
            
          <% end %>
          
          </ul>
        </div>
      </div>
    </nav>
    
  </header> 
  <% flash.each do |key, value| %>
    <div class="flash_notice alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="閉じる"><span aria-hidden="true">×</span></button>
      <%= content_tag(:div, value, class: "#{key}") %>
    </div>
  <% end %>
  <div class="content-container">
    <%= yield %>
  </div>
    <footer>
      <footer><p>©Copyright Reserved Yuta Omori 2018</p></footer>
    </footer>
  </body>
</html>
